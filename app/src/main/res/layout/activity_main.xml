<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F2F7B5">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/move_activity"
        android:id="@+id/btn_move_activity"
        android:background="#C8E9EA"
        android:fontFamily="@font/aqua"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#D99FEB"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="@string/move_with_data"
        android:id="@+id/btn_move_activity_with_data"
        android:background="#C8E9EA"
        android:fontFamily="@font/aqua"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#D99FEB"
        android:layout_below="@id/btn_move_activity"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/dial_number"
        android:id="@+id/btn_dial_number"
        android:background="#C8E9EA"
        android:fontFamily="@font/aqua"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#D99FEB"
        android:layout_below="@id/btn_move_activity_with_data"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/move_with_result"
        android:id="@+id/btn_move_activity_for_result"
        android:background="#C8E9EA"
        android:fontFamily="@font/aqua"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#D99FEB"
        android:layout_below="@id/btn_dial_number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="HASIL PINDAH AKTIVITI"
        android:textSize="25sp"
        android:fontFamily="@font/aqua"
        android:layout_marginTop="26dp"
        android:id="@+id/tv_result"
        android:layout_below="@id/btn_move_activity_for_result"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

</RelativeLayout>