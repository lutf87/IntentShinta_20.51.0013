<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoveActivity"
    android:background="#F2DEDA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/aqua"
        android:text="@string/this_is_move_activity"
        android:textColor="#35AADA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#FFFFFF"
        android:fontFamily="@font/aqua"
        android:text="Kembali Ke Halaman Utama"
        android:textColor="#FFB3FA"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>